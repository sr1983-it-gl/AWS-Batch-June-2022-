{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Web Servers, Target Groups and Application Load balancer",
    "Parameters": {
        "InstanceType": {
            "Description": "WebServer EC2 instance type",
            "Type": "String",
            "Default": "t2.micro"
        },
        "InstanceAMI": {
            "Description": "EC2 instance AMI",
            "Type": "String",
            "Default": "ami-0f9cf087c1f27d9b1"
        },
        "VPCId": {
            "Description": "Default VPC Id",
            "Type": "AWS::EC2::VPC::Id",
            "Default": "vpc-05e95f011092edd9b"
        },
        "Subnets1": {
            "Description": "VPC Subnet-1 Id",
            "Type": "AWS::EC2::Subnet::Id",
            "Default": "subnet-0a60c636c0167c346"
        },
        "Subnets2": {
            "Description": "VPC Subnet-2 Id",
            "Type": "AWS::EC2::Subnet::Id",
            "Default": "subnet-0c2225906e7c37160"
        }
    },
    "Resources": {
        "WebServerSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Enable HTTP ingress",
                "VpcId": {
                    "Ref": "VPCId"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "80",
                        "ToPort": "80",
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
				"Tags": [
					{
						"Key" : "Name",
						"Value" : "CF_SG_HTTP_80_Open"
					}
				]
            }
        },
        "WebServerInstance1": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "ImageId": {
                    "Ref": "InstanceAMI"
                },
                "NetworkInterfaces": [
                    {
                        "GroupSet": [
                            {
                                "Ref": "WebServerSecurityGroup"
                            }
                        ],
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "DeleteOnTermination": "true",
                        "SubnetId": {
                            "Ref": "Subnets1"
                        }
                    }
                ],
				"Tags": [
					{
						"Key" : "Name",
						"Value" : "CF_EC2_WebServerInstance1"
					}
				],				
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "\n",
                            [
                                "#!/bin/bash",
                                "sudo apt-get update -y",
                                "sudo apt-get install -y apache2",
                                "sudo chmod 766 /var/www/html/index.html",
                                "echo '<html>Welcome to HTTP Server 1</html>' > /var/www/html/index.html"
                            ]
                        ]
                    }
                }
            }
        },
        "WebServerInstance2": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "ImageId": {
                    "Ref": "InstanceAMI"
                },
                "NetworkInterfaces": [
                    {
                        "GroupSet": [
                            {
                                "Ref": "WebServerSecurityGroup"
                            }
                        ],
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "DeleteOnTermination": "true",
                        "SubnetId": {
                            "Ref": "Subnets1"
                        }
                    }
                ],
				"Tags": [
					{
						"Key" : "Name",
						"Value" : "CF_EC2_WebServerInstance2"
					}
				],								
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "\n",
                            [
                                "#!/bin/bash",
                                "sudo apt-get update -y",
                                "sudo apt-get install -y apache2",
                                "sudo chmod 766 /var/www/html/index.html",
                                "echo '<html>Welcome to HTTP Server 2</html>' > /var/www/html/index.html"
                            ]
                        ]
                    }
                }
            }
        },
        "ALBTargetGroup": {
            "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
            "Properties": {
                "HealthCheckIntervalSeconds": 60,
                "UnhealthyThresholdCount": 10,
                "HealthCheckPath": "/",
                "Name": "MyTargetGroup",
                "Port": 80,
                "Protocol": "HTTP",
                "VpcId": {
                    "Ref": "VPCId"
                },
                "Targets": [
                    {
                        "Id": {
                            "Ref": "WebServerInstance1"
                        },
                        "Port": 80
                    },
					{
                        "Id": {
                            "Ref": "WebServerInstance2"
                        },
                        "Port": 80
                    }
                ]
            }
        },
        "ALBListener": {
            "Type": "AWS::ElasticLoadBalancingV2::Listener",
            "Properties": {
                "DefaultActions": [
                    {
                        "Type": "forward",
                        "TargetGroupArn": {
                            "Ref": "ALBTargetGroup"
                        }
                    }
                ],
                "LoadBalancerArn": {
                    "Ref": "ApplicationLoadBalancer"
                },
                "Port": "80",
                "Protocol": "HTTP"
            }
        },
        "ApplicationLoadBalancer": {
            "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
            "Properties": {
                "Scheme": "internet-facing",
                "Subnets": [
                    {
                        "Ref": "Subnets1"
                    },
                    {
                        "Ref": "Subnets2"
                    }
                ],
                "SecurityGroups": [
                    {
                        "Ref": "WebServerSecurityGroup"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "URL": {
            "Description": "Load Balancer URL",
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        "http://",
                        {
                            "Fn::GetAtt": [
                                "ApplicationLoadBalancer",
                                "DNSName"
                            ]
                        }
                    ]
                ]
            }
        }
    }
}